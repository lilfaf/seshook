<div class="col-sm-6 col-sm-offset-3">
<div class="panel panel-default center-block">
    <div class="panel-heading"><h2>Register</h2></div>
    <div class="panel-body">

      <!-- facebook login -->
      {{facebook-auth}}
      <div class="divider"></div>

      {{#if errorMessage}}
      <div class="alert alert-danger alert-dismissable">
        <button {{action 'closeErrorMessage'}} class="close">&times;</button>
        <strong>Oh snap!</strong> {{errorMessage}}
      </div>
      {{/if}}

      <form role="form" {{action 'register' on='submit'}}>
        <div {{bind-attr class=":form-group model.errors.username:has-error"}}>
          <label for='username'>Username</label>
          {{input id='username' class='form-control' placeholder='Enter Username' value=model.username}}
          {{#each error in model.errors.username}}
            <div class="error">
              <span class="help-block">{{error.message}}</span>
            </div>
          {{/each}}
        </div>
        <div {{bind-attr class=":form-group model.errors.email:has-error"}}>
          <label for='email'>Email</label>
          {{input id='email' class='form-control' placeholder='Enter Email' value=model.email}}
          {{#each error in model.errors.email}}
            <div class="error">
              <span class="help-block">{{error.message}}</span>
            </div>
          {{/each}}
        </div>

        <div {{bind-attr class=":form-group model.errors.password:has-error"}}>
          <label for='password'>Password</label>
          {{input id='password' class='form-control' placeholder='Enter Password' type='password' value=model.password}}
          {{#each error in model.errors.password}}
            <div class="error">
              <span class="help-block">{{error.message}}</span>
            </div>
          {{/each}}
        </div>

        <div {{bind-attr class=":form-group model.errors.passwordConfirmation:has-error"}}>
          <label for='password_confirmation'>Password Confirmation</label>
          {{input id='password-confirmation' class='form-control' placeholder='Enter Password Confirmation' type='password' value=model.passwordConfirmation}}
          {{#each error in model.errors.passwordConfirmation}}
            <div class="error">
              <span class="help-block">{{error.message}}</span>
            </div>
          {{/each}}
        </div>

        <div class="form-group">
          <button {{bind-attr disabled=model.isntValid}} type='submit' class="btn btn-primary btn-block">Register</button>
        </div>
      </form>
    </div>
  </div>
</div>
